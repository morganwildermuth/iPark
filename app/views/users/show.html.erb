<p>Hi, <%= current_user.username %>!</p>

<p>Spots You've Posted for Rent </p>
<% @your_spots.each do |spot| %>
  <p><%= spot.street %>, <%= spot.zip_code %></p>
  <p>Price: <%= spot.price %></p>
  <p><%= link_to "Add More Dates", {:controller => "reservations", :action => "new"}%> </p>
  <p>
    <% spot.reservations.each do |spot_reservation| %>
      <p>
        <%= spot_reservation.date.to_date.inspect %> 
      </p>
      <p>
        <%if spot_reservation.renter_id.nil? %>
          <%= link_to "Delete", {:controller => "reservations", :action => "destroy", :id => spot_reservation.id}, {:method => :delete} %>
        <% else %>
          Reserved By: <%= User.find(spot_reservation.renter_id.to_i).username %> 
        <% end %>
      </p>
    <% end %>
  </p>
  <br>
<% end %>

<p>Spots You've Rented</p>
<% @your_reservations.each do |reservation| %>
  <p><%= reservation.date %></p>
  <p>
    <% spot = Spot.find(reservation.spot_id) %>
    <%= spot.street %>, <%= spot.zip_code %>
  </p>
<% end %>